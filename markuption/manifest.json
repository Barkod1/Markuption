{
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "name": "MarkUption",
    "version": "1.0",
    "description": "save & enter to your last locations in specified sites",
    "action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "http://*/",
        "https://*/"
    ],
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "run_at": "document_idle",
        "js": ["content_script.js", "updateYpos.js"]
    }]
}